
<%- include("partials/header") %>


<h1>This is Edit page</h1>
<!-- <%= blog.title %> -->

<div class="container">
    <h4 style="text-align: center; ">  EDIT <%= blog.title %> </h4>
    <div style=" width: 40%; margin:50px auto;">
    <form action="/blogs/<%=blog._id%>?_method=PUT" method="POST">
        <div class="form-group">
          <label >Title</label>
          <input type="text" class="form-control"  name ="blog[title]"  value="<%=blog.title %>" >
        </div>
        <div class="form-group">
          <label >Image</label>
          <input type="text" class="form-control"   name ="blog[image]" value="<%=blog.image %>">
        </div>
        <!-- <div class="form-group ">
            <label >Description</label>
            <input type="text" class="form-control" name ="Description   placeholder="Blog goes here">
          
        </div> -->
        <div class="form-group">
            <div class="form-group-prepend">
              <span class="form-group-text">Post</span>
            </div>
            <textarea class="form-control"  name ="blog[body]"><%=blog.body %></textarea>
          </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      </div>
</div>





